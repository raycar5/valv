{
  "name": "valv",
  "version": "0.0.8",
  "description": "Tiny but powerful web framework built with lit-html and rxjs",
  "keywords": [
    "web-framework",
    "framework",
    "lit-html",
    "rx",
    "rxjs"
  ],
  "main": "valv.js",
  "module": "valv.js",
  "typings": "valv.d.ts",
  "files": [
    "/valv.js",
    "/valv.js.map",
    "/valv.d.ts",
    "/valv.d.ts.map",
    "/lib/",
    "/src/"
  ],
  "author": "raycar5",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc  && typedoc --tsconfig tsconfig.typedoc.json --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "node tools/cat coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "checksize": "rollup -c && cat valv.bundled.js | gzip -9 | wc -c && rm valv.bundled.js",
    "pack": "npm run build && npm pack ."
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "allowJs": true
        }
      }
    },
    "transform": {
      ".(ts|tsx|js)": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!lit-html/)"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/jest": "^23.3.14",
    "@types/jsdom": "^12.2.4",
    "@types/node": "^10.17.9",
    "colors": "^1.4.0",
    "commitizen": "^3.1.2",
    "coveralls": "^3.0.9",
    "cross-env": "^5.2.1",
    "cz-conventional-changelog": "^2.1.0",
    "del": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "husky": "^1.3.1",
    "jest": "^25.0.0",
    "jest-config": "^25.0.0",
    "jsdom": "^16.5.0",
    "lint-staged": "^7.3.0",
    "lit-html": "^0.13.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.19.1",
    "prompt": "^1.0.0",
    "regenerator-runtime": "^0.12.1",
    "replace-in-file": "^3.4.4",
    "rimraf": "^2.7.1",
    "rollup": "^0.66.2",
    "rollup-plugin-analyzer": "^2.1.0",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.25.3",
    "rxjs": "^6.5.3",
    "semantic-release": "^17.2.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.4",
    "typescript": "^3.7.3",
    "web-component-tester": "^6.9.2"
  },
  "peerDependencies": {
    "lit-html": "^0.13.0",
    "rxjs": "^6.3.3"
  }
}
